<div style="margin:auto; text-align: center;">
  <h2>{{t (.I18n "links.forgot_password") "forgot your password?"}}</h2>

  {{$flashes := .Flashes}}
  {{if $flashes}}
    <ul>
      {{range $flash := $flashes}}
        <li>{{$flash.Message}}</li>
      {{end}}
    </ul>
  {{end}}

  <div>
    <form action="{{.AuthURL "password/recover"}}" method="POST">
      {{t ".form.email"}}:  <input name="email">
      <input type="submit">
    </form>
  </div>

  <div>
    <a href="{{.AuthURL "login"}}">{{t (printf "%v." .AuthI18nGroup)}}</a>
  </div>
</div>
